<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/product_item_productImage"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_item_productName"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_item_productPrice"
        >
    </TextView>

 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/addPanier"
     android:id="@+id/addPanier">
 </Button>
 <Button
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/Details"
     android:id="@+id/product_details"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>
</LinearLayout>